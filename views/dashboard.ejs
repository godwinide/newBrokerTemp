
<section class="inner-hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="inner-hero-content">
                    <h2 class="inner-hero__title text-shadow">Dashboard</h2>
                    <ul class="page__breadcums">
                        <li><a href="/">home</a></li>
                        <li>Dashboard</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="particles"></div>
</section>



    <!-- dashboard-section start -->
    <section class="dashboard-section pt-150 pb-150">
        <div class="container">
            <div class="row">

                <div class="col-md-12 mb-4">
                    <label>Referral Link</label>
                    <div class="input-group">
                        <input type="text" name="text" class="form-control" id="referralURL"
                        value="https://rozzaycrypto.us/signup/<%= req.user.username%>" disabled>
                        <div class="input-group-append">
                            <span class="input-group-text copytext copyBoard" id="copyBoard"
                            onclick="myFunction()"> <i class="fa fa-copy"></i> </span>
                        </div>
                    </div>
                </div>

                            
                <div class="col-lg-12">
                    <div class="dashboard-main">



                        <div class="dashboard__user">
                            <div class="single">
                                <div class="thumb"><img
                                            src="/placeholder-image/800x800"
                                            alt="image">
                                </div>
                                <div class="content">
                                    <h5 class="caption"><%=req.user.username%></h5>
                                    <span><%= req.user.firstname %> <%=req.user.lastname %></span>
                                </div>
                            </div><!-- single end -->
                            <div class="single">
                                <div class="content">
                                    <h5 class="caption">Registration Date</h5>
                                    <span><%=new Date(req.user.regDate).toDateString()%></span>
                                </div>
                            </div><!-- single end -->
                            <!-- <div class="single">
                                <div class="content">
                                    <h5 class="caption">Last Access</h5>
                                    <span> Dec - 21 - 2021 / 11:27:10 AM</span>
                                </div>
                            </div> -->
                            <!-- single end -->
                        </div>


                        <div class="row mt-30 mb-none-30">

                                <div class="col-lg-3 mb-30">
                                    <div class="stat-item">
                                        <i class="las la-piggy-bank base--color"></i>
                                        <h6 class="caption text-shadow">Capital</h6>
                                        <span class="total__amount">$<%=commaFunc(req.user.capital)%></span>
                                        <div class="d-flex justify-content-center mt-3">
                                            <a href="/deposit/history"
                                                class="btn btn-primary btn-small d-block text-center style--two">View report</a>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-3 mb-30">
                                    <div class="stat-item">
                                        <i class="las la-piggy-bank base--color"></i>
                                        <h6 class="caption text-shadow">Total Balance</h6>
                                        <span
                                                class="total__amount">$<%=commaFunc(req.user.balance)%></span>

                                        <div class="d-flex justify-content-center mt-3">
                                            <a href="/deposit/history"
                                                class="btn btn-primary btn-small d-block text-center style--two">View report</a>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-3 mb-30">
                                        <div class="stat-item">
                                            <i class="las la-piggy-bank base--color"></i>
                                            <h6 class="caption text-shadow">Profit</h6>
                                            <span
                                            class="total__amount">$<%=commaFunc(req.user.profit)%></span>
                                        </div>
                                </div>


                            <div class="col-lg-3 mb-30">
                                <div class="stat-item">

                                    <i class="las la-credit-card base--color"></i>
                                    <h6 class="caption text-shadow">Total Withdraw</h6>
                                    <span class="total__amount">$<%= commaFunc(req.user.total_withdraw||0) %></span>
                                    <div class="d-flex justify-content-center mt-3">
                                        <a href="/withdraw-history"
                                           class="btn btn-primary btn-small d-block text-center style--two">View report</a>
                                    </div>
                                </div><!-- stat-item end -->
                            </div>
                            <div class="col-lg-3 mb-30">
                                <div class="stat-item">
                                    <i class="las la-ticket-alt base--color"></i>
                                    <h6 class="caption text-shadow">Pennding Deposit</h6>
                                    <span
                                            class="total__amount">$<%=commaFunc(req.user.pending)%></span>
                                    <div class="d-flex justify-content-center mt-3">
                                        <a href="/withdraw-history"
                                           class="btn btn-primary btn-small d-block text-center style--two">View report</a>
                                    </div>
                                </div><!-- stat-item end -->
                            </div>

                        </div>


                        <div class="row mt-100">
                            <div class="col-lg-6">
                                <div class="stat-wrapper deposit">
                                    <div class="stat__header">
                                        <div class="left">
                                            <div class="icon"><i class="las la-chart-area"></i></div>
                                            <h3 class="caption">Deposit</h3>
                                        </div>
                                        <div class="right"><i class="flaticon-next"></i></div>
                                    </div>
                                    <div class="item-wrapper">
                                        <div class="stat-item-two box-shadow-two">
                                            <h5 class="caption text-shadow">Total Deposit</h5>
                                            <span class="total__amount base--color">$0.00</span>
                                        </div><!-- stat-item-two end -->
                                        <div class="stat-item-two box-shadow-two">
                                            <h5 class="caption text-shadow">Last Deposit</h5>
                                            <span class="total__amount base--color">$
                                                                                                    0.00
                                                 </span>
                                        </div><!-- stat-item-two end -->

                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 mt-lg-0 mt-5">
                                <div class="stat-wrapper withdraw">
                                    <div class="stat__header">
                                        <div class="left">
                                            <div class="icon"><i class="las la-credit-card"></i></div>
                                            <h3 class="caption">Withdraw</h3>
                                        </div>
                                        <div class="right"><i class="flaticon-next"></i></div>
                                    </div>
                                    <div class="item-wrapper">
                                        <div class="stat-item-two box-shadow-two">
                                            <h5 class="caption text-shadow">Total Withdraw</h5>
                                            <span class="total__amount base--color">$0.00</span>
                                        </div><!-- stat-item-two end -->
                                        <div class="stat-item-two box-shadow-two">
                                            <h5 class="caption text-shadow">Last Withdraw</h5>
                                            <span class="total__amount base--color">$
                                                                                                    0.00
                                                                                            </span>
                                        </div><!-- stat-item-two end -->

                                    </div><!-- item-wrapper end -->
                                </div>
                            </div>

                        </div>


                    </div><!-- dashboard-main end -->
                </div>


            </div>
        </div>
    </section>
    <!-- dashboard-section end -->


  