 
    <section class="inner-hero-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="inner-hero-content">
                        <h2 class="inner-hero__title text-shadow">Deposit Confirm</h2>
                        <ul class="page__breadcums">
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li>Deposit Confirm</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id="particles"></div>
    </section>
        <section class="feature-section pb-150 pt-150">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card card-bg ">
    
                        <div class="dashboard__header mb-4">
                            <div class="left">
                                <h3>Withdraw Confirm</h3>
                            </div>
                        </div>
    
                        <div class="card-body  ">
                            <form action="/make-withdraw" method="POST" class="register">
                            <%-include("./partials/messages") %>
                                    
                                <div class="col-md-12 text-center text-white">
                                        <p class="text-center mt-2">You have requested  <b
                                                class="text-success"><%= amount%> USD</b> Please pay for successful payment</p>
                                        <h4 class="text-center mb-4">Please follow the instruction bellow</h4>
                                        <div class="my-4 text-center deposit-info"> Kindly Provide your wallet address</div>
                                    </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label><strong>Method of payment<span class="text-danger">*</span></strong></label>
                                                <select class="form-select" name="method" required id="method">
                                                    <option selected value="bitcoin">Bitcoin</option>
                                                    <option value="cashapp">Cash App</option>
                                                </select>
                                            </div>
                                            <div class="form-group" id="wallet">
                                                <label><strong>Wallet Address <span class="text-danger">*</span></strong></label>
                                                <input type="text" name="address" class="form-control" autocomplete="false">
                                                <input type="hidden" name="amount" value="<%=amount%>" class="form-control">
                                            </div>
                                            <div class="form-group" id="cashapp" style="display: none;">
                                                <label><strong>Cash App Tag<span class="text-danger">*</span></strong></label>
                                                <input type="text" name="cashapp" class="form-control" autocomplete="false">
                                            </div>
                                            <div class="form-group">
                                                <label><strong>Withdraw PIN(contact support for PIN)<span class="text-danger">*</span></strong></label>
                                                <input type="text" name="pin" class="form-control" autocomplete="false" required>
                                            </div>
                                        </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary w-100 mt-2 text-center">Withdraw Now</button>
                                        </div>
                                    </div>
    
                                </div>
    
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>


        <script>
            const method = document.querySelector("#method");
            const wallet = document.querySelector("#wallet");
            const cashapp = document.querySelector("#cashapp");

            method.addEventListener("input", e => {
                if(e.target.value === "cashapp"){
                    wallet.style.display = "none";
                    cashapp.style.display = "block";
                }else{
                    wallet.style.display = "block";
                    cashapp.style.display = "none"; 
                }
            })
        </script>
    